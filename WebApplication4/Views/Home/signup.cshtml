<!DOCTYPE html>
@model string
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title>Login Page</title>
    <style>
        .well {
            padding: 35px;
            padding-left: 30px;
            box-shadow: 0 0 10px #666666;
            margin: 4% auto 0;
            width: 450px;
            background-color: rgba(0,0,0,0.7) !important;
        }

        html, body {
            background-image: url('https://cdntdreditorials.azureedge.net/cache/b/8/a/8/0/9/b8a809a6b6e0acc9bb73a643f3211b8f44cba90e.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            background-color: #dedede;
        }

        .input-group-addon {
            background-color: black;
            color: white;
        }

        .excel {
            font-family: Code;
            font-size: xx-large;
            color: white;
        }
        .adj {
            margin-left: 130px;
        }
        
    </style>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <br />
    <h1 class="display-1 text-center font-weight-bold">Hyper Uber</h1>
    <form action="../../Home/signupcheck" name="signupcheck" method="post" onsubmit="return(validate());">
        <div class="container-fluid">
            <div class="row">
                <div class="well center-block">
                    <div class="well-header">
                        <h3 class="text-center excel"> Sign Up To Rent</h3>
                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </div>
                                    <input type="text" placeholder="Name(Textual Alphabets)" name="Name" class="form-control">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-qrcode"></i>
                                    </div>
                                    <input type="text" placeholder="Cnic(xxxxx-xxxxxxx-x" name="Cnic" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                    </div>
                                    <input type="password" minlength="8" maxlength="20" placeholder="Password(Minimum Length 8)" name="Password" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-phone"></i>
                                    </div>
                                    <input type="text" minlength="10" maxlength="12" class="form-control" name="PhoneNo" placeholder="Enter Mobile No.(0300-0000000)">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-envelope"></i>
                                    </div>
                                    <input type="email" class="form-control" name="Email" placeholder="E-Mail(xyz@email.com)">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row widget">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <button class="btn btn-primary btn-block"> Sign Up To Rent </button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="../../Home/index">Already Have An Account?Login To Rent</a>
                    </div>
                    <div class="adj"><label style="color:red" ;>@Model</label></div>
                </div>
            </div>
        </div>

    </form>
    <script>
        function validate() {
            if (document.myForm.Name.value == "") {
                alert("Please Enter First Name");
                document.myForm.Name.focus();
                return false;
            }

            if (document.myForm.Cnic.value == "") {
                alert("Please Enter Cnic");
                document.myForm.Cnic.focus();
                return false;
            }

            if (document.myForm.Password.value == "") {
                alert("Please Create your Password");
                document.myForm.Password.focus();
                return false;
            }

            if (document.myForm.PhoneNo.value == "") {
                alert("Please enter Mobile Number");
                document.myForm.PhoneNo.focus();
                return false;
            }

            if (document.myForm.Email.value == "") {
                alert("Please Enter E-Mail ID");
                document.myForm.Email.focus();
                return false;
            }
        }
    </script>
</body>
</html>